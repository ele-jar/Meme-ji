<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewMore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    tools:context=".ui.fragments.MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Info Section -->
        <include layout="@layout/item_more_header"
            android:id="@+id/headerInfo" />
        <include layout="@layout/item_more_info"
            android:id="@+id/itemAppVersion" />
        <include layout="@layout/item_more_info"
            android:id="@+id/itemDeveloper" />
        <include layout="@layout/item_more_info"
            android:id="@+id/itemTotalMemes" />
        <include layout="@layout/item_more_info"
            android:id="@+id/itemSourceCode" />

        <!-- Contribute Section -->
        <include layout="@layout/item_more_header"
            android:id="@+id/headerContribute" />
        <include layout="@layout/item_more_info"
            android:id="@+id/itemShareApp" />
        <include layout="@layout/item_more_info"
            android:id="@+id/itemReportBug"/>
        <include layout="@layout/item_more_info"
            android:id="@+id/itemTranslate"/>

        <!-- More Section -->
        <include layout="@layout/item_more_header"
            android:id="@+id/headerMore" />
        <include layout="@layout/item_more_info"
            android:id="@+id/itemSettings"/>
        <include layout="@layout/item_more_info"
            android:id="@+id/itemSocials" />

         <!-- Update Section Header -->
         <include layout="@layout/item_more_header"
            android:id="@+id/headerUpdate"
            android:visibility="gone"
            tools:visibility="visible"/>

        <!-- Progress Bar for loading App Info -->
         <ProgressBar
             android:id="@+id/progress_bar_app_info"
             style="?android:attr/progressBarStyleHorizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginHorizontal="16dp"
             android:layout_marginTop="8dp"
             android:indeterminate="true"
             android:visibility="gone"
             tools:visibility="visible" />

        <!-- Error Message for App Info -->
        <TextView
            android:id="@+id/text_view_app_info_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorError"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Failed to load update info"/>

         <!-- Update Section Content -->
         <LinearLayout
             android:id="@+id/update_section"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:paddingHorizontal="16dp"
             android:paddingTop="8dp"
             android:paddingBottom="16dp"
             android:visibility="gone"
             tools:visibility="visible">

             <TextView
                 android:id="@+id/text_view_update_version"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?attr/textAppearanceBodyMedium"
                 android:textColor="?attr/colorOnSurface"
                 tools:text="Version: v2.1.0" />

              <TextView
                 android:id="@+id/text_view_update_date"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?attr/textAppearanceBodySmall"
                 android:textColor="?attr/colorOnSurfaceVariant"
                 android:layout_marginTop="4dp"
                 tools:text="Released: 2025-05-01" />

              <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/changelog"
                 android:textAppearance="?attr/textAppearanceTitleMedium"
                 android:textColor="?attr/colorOnSurface"
                 android:layout_marginTop="16dp"/>

              <TextView
                 android:id="@+id/text_view_changelog"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textAppearance="?attr/textAppearanceBodyMedium"
                 android:textColor="?attr/colorOnSurfaceVariant"
                 android:layout_marginTop="4dp"
                 android:lineSpacingMultiplier="1.2"
                 tools:text="• Fixed bugs\n• Added features" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_download_update"
                 style="@style/Widget.Material3.Button.Icon"
                 android:layout_width="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="16dp"
                 android:text="@string/download_new_version"
                 app:icon="@drawable/ic_download" />

         </LinearLayout>

         

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
